{
    "src_folders": [
        "./test/e2e/tests"
    ],
    "output_folder": "./test/e2e/output",
    "globals_path": "./test/e2e/globals.js",
    "disable_colors": false,
    "test_workers": false,
    "test_settings": {
        "default": {
            "launch_url": "http://localhost:8081?stargate=http://localhost:8080&&rpc=http://localhost:26657",
            "silent": true,
            "webdriver": {
                "start_process": true,
                "port": 9515,
                "default_path_prefix": "",
                "server_path": "./node_modules/.bin/chromedriver",
                "cli_args": [
                    "--verbose"
                ]
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true,
                "loggingPrefs": {
                    "driver": "INFO",
                    "server": "OFF",
                    "browser": "INFO"
                },
                "chromeOptions": {
                    "args": [
                        "disable-web-security",
                        "ignore-certificate-errors"
                    ]
                }
            },
            "screenshots": {
                "enabled": false,
                "path": ""
            },
            "request_timeout_options": {
                "timeout": 60000,
                "retry_attempts": 5
            },
            "filter": "*.spec.js"
        }
    }
}